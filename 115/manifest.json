{
    "manifest_version": 3,
    "name": "YT Comments Reborn",
    "version": "1.0",
    "description": "Be able to leave comments on YouTube videos that have a restricted comments section.",
    "icons":{
        
        "128": "/img/icon128.png"
    },
    "permissions": [
        "activeTab","tabs"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.youtube.com/watch?v=*"
            ]
        }
    ]
}
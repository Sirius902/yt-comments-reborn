{
  "name": "yt-comments-reborn-backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "start": "nodemon -e ts,yaml --watch src --watch api --exec \"npm run build && node build/main.js\"",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format:base": "prettier --config ../.prettierrc './**/*.{ts,json,yaml}'",
    "check-format": "npm run format:base -- --check",
    "format": "npm run format:base -- --write"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^10.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/express-session": "^1.17.7",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/pg": "^8.6.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-google": "^0.14.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.3",
    "express-session": "^1.17.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.10.0",
    "swagger-ui-express": "^4.6.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "google",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules",
      "build"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "require-jsdoc": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}

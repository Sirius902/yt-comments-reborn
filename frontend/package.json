{
  "name": "yt-comments-reborn-frontend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "watch": "rollup --config rollup.config.js --watch",
    "lint": "eslint . --ext .ts,.tsx,.js --max-warnings=0",
    "format:base": "prettier --config ../.prettierrc ./**/*.{ts,tsx,css,json}",
    "check-format": "npm run format:base -- --check",
    "format": "npm run format:base -- --write"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/chrome": "^0.0.231",
    "@types/react": "^18.0.37",
    "@types/react-collapse": "^5.0.1",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-google": "^0.14.0",
    "prettier": "^2.8.8",
    "react-collapse": "^5.1.1",
    "rollup": "^3.20.4",
    "rollup-plugin-import-css": "^3.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "google",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules",
      "extension/build"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "require-jsdoc": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
